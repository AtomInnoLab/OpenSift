# OpenSift Environment Variables
# Copy this file to .env and fill in your values.
# These override the YAML configuration.

# ─── Server ──────────────────────────────────────────────
OPENSIFT_SERVER__PORT=8080
OPENSIFT_SERVER__WORKERS=4
OPENSIFT_DEBUG=false

# ─── AI (WisModel — the only supported LLM for query planning & verification) ──
OPENSIFT_AI__API_KEY=your-wismodel-api-key
OPENSIFT_AI__BASE_URL=http://wis-apihub-v2.dev.atominnolab.com/api/v1/resource/WisModel/v1
OPENSIFT_AI__MODEL_PLANNER=WisModel-20251110
OPENSIFT_AI__MODEL_VERIFIER=WisModel-20251110

# ─── Search Backend ──────────────────────────────────────
OPENSIFT_SEARCH__DEFAULT_ADAPTER=atomwalker
OPENSIFT_SEARCH__ADAPTERS__ATOMWALKER__ENABLED=true
OPENSIFT_SEARCH__ADAPTERS__ATOMWALKER__HOSTS=["http://wis-apihub-v2.dev.atominnolab.com"]
OPENSIFT_SEARCH__ADAPTERS__ATOMWALKER__INDEX_PATTERN=atomwalker-works
OPENSIFT_SEARCH__ADAPTERS__ATOMWALKER__API_KEY=wsk_3af5178deee54f629ef480a82beab431

# ─── Observability ───────────────────────────────────────
OPENSIFT_OBSERVABILITY__LOG_LEVEL=info
OPENSIFT_OBSERVABILITY__LOG_FORMAT=json
