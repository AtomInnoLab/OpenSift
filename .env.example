# OpenSift Environment Variables
# Copy this file to .env and fill in your values.
# These override the YAML configuration.

# ─── Server ──────────────────────────────────────────────
OPENSIFT_SERVER__PORT=8080
OPENSIFT_SERVER__WORKERS=4
OPENSIFT_DEBUG=false

# ─── AI Provider (for Query Planning & Result Verification) ──
# Default: WisModel — specifically trained for query planning & verification
OPENSIFT_AI__PROVIDER=wismodel
OPENSIFT_AI__API_KEY=wsk_3af5178deee54f629ef480a82beab431
OPENSIFT_AI__BASE_URL=http://wis-apihub-v2.dev.atominnolab.com/api/v1/resource/WisModel/v1
OPENSIFT_AI__MODEL_PLANNER=WisModel-20251110
OPENSIFT_AI__MODEL_VERIFIER=WisModel-20251110
# To use OpenAI instead:
# OPENSIFT_AI__PROVIDER=openai
# OPENSIFT_AI__API_KEY=sk-your-openai-key
# OPENSIFT_AI__BASE_URL=https://api.openai.com/v1
# OPENSIFT_AI__MODEL_PLANNER=gpt-4o-mini
# OPENSIFT_AI__MODEL_VERIFIER=gpt-4o-mini

# ─── Search Backend ──────────────────────────────────────
OPENSIFT_SEARCH__DEFAULT_ADAPTER=atomwalker
OPENSIFT_SEARCH__ADAPTERS__ATOMWALKER__API_KEY=wsk_3af5178deee54f629ef480a82beab431

# ─── Cache ───────────────────────────────────────────────
OPENSIFT_CACHE__BACKEND=redis
OPENSIFT_CACHE__REDIS_URL=redis://localhost:6379

# ─── Observability ───────────────────────────────────────
OPENSIFT_OBSERVABILITY__LOG_LEVEL=info
OPENSIFT_OBSERVABILITY__LOG_FORMAT=json
